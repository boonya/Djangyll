{
  "swagger": "2.0",
  "info": {
    "title": "Djangyll App",
    "license": {
      "name": "MIT",
      "url": "http://opensource.org/licenses/MIT"
    },
    "version": "1.0.1"
  },
  "produces": [
    "application/json"
  ],
  "tags": [
    {
      "name": "post",
      "description": "Everything about your Posts"
    }
  ],
  "paths": {
    "/post": {
      "get": {
        "tags": [
          "post"
        ],
        "summary": "Get listing of posts.",
        "responses": {
          "200": {
            "description": "A list of posts.",
            "schema": {
              "$ref": "#/definitions/PostList"
            }
          },
          "default": {
            "description": "error payload",
            "schema": {
              "$ref": "#/definitions/ErrorModel"
            }
          }
        }
      },
      "post": {
        "tags": [
          "post"
        ],
        "summary": "Create new post.",
        "parameters": [
          {
            "name": "category",
            "in": "formData",
            "required": true,
            "type": "string",
            "default": "Uncategorised"
          },
          {
            "name": "permalink",
            "in": "formData",
            "required": true,
            "type": "string",
            "default": "/about.html"
          },
          {
            "name": "layout",
            "in": "formData",
            "required": true,
            "type": "string",
            "default": "post"
          },
          {
            "name": "language",
            "in": "formData",
            "required": true,
            "type": "string",
            "default": "uk-UA"
          },
          {
            "name": "title",
            "in": "formData",
            "required": true,
            "type": "string",
            "default": "Про нас"
          },
          {
            "name": "cat_slug",
            "in": "formData",
            "required": true,
            "type": "string",
            "default": "uncategorised"
          },
          {
            "name": "featured",
            "in": "formData",
            "required": true,
            "type": "boolean",
            "default": false
          },
          {
            "name": "date",
            "in": "formData",
            "required": true,
            "type": "string",
            "format": "date-time",
            "default": "2010-10-25T19:00:00"
          },
          {
            "name": "slug",
            "in": "formData",
            "required": true,
            "type": "string",
            "default": "about"
          },
          {
            "name": "body",
            "in": "formData",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "default": {
            "description": "error payload",
            "schema": {
              "$ref": "#/definitions/ErrorModel"
            }
          }
        }
      },
      "put": {
        "tags": [
          "post"
        ],
        "summary": "Bulk update of posts.",
        "parameters": [],
        "responses": {
          "default": {
            "description": "error payload",
            "schema": {
              "$ref": "#/definitions/ErrorModel"
            }
          }
        }
      },
      "delete": {
        "tags": [
          "post"
        ],
        "summary": "Bulk delete of posts.",
        "parameters": [],
        "responses": {
          "default": {
            "description": "error payload",
            "schema": {
              "$ref": "#/definitions/ErrorModel"
            }
          }
        }
      }
    },
    "/post/{post_id}": {
      "get": {
        "tags": [
          "post"
        ],
        "summary": "Get concrete post.",
        "parameters": [
          {
            "name": "post_id",
            "in": "path",
            "description": "ID of post",
            "required": true,
            "type": "string"
          },
          {
            "name": "convert",
            "in": "query",
            "description": "Request to convert body of post. E.g. `html_to_md`",
            "required": false,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "One post.",
            "$ref": "#/definitions/PostModel"
          },
          "default": {
            "description": "error payload",
            "schema": {
              "$ref": "#/definitions/ErrorModel"
            }
          }
        }
      },
      "put": {
        "tags": [
          "post"
        ],
        "summary": "Update concrete post.",
        "parameters": [],
        "responses": {
          "default": {
            "description": "error payload",
            "schema": {
              "$ref": "#/definitions/ErrorModel"
            }
          }
        }
      },
      "delete": {
        "tags": [
          "post"
        ],
        "summary": "Delete concrete post.",
        "parameters": [],
        "responses": {
          "default": {
            "description": "error payload",
            "schema": {
              "$ref": "#/definitions/ErrorModel"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "ErrorModel": {
      "description": "Error response",
      "schema": {
        "type": "object",
        "example": {
          "reasons": [
            "ERROR REASON"
          ]
        }
      }
    },
    "PostList": {
      "description": "Listing of posts",
      "schema": {
        "type": "array",
        "example": [
          "2010-10-25-about.markdown",
          "2010-10-26-contacts.markdown",
          "2010-10-27-first-project.markdown"
        ]
      }
    },
    "PostModel": {
      "description": "Post",
      "schema": {
        "type": "object",
        "example": {
          "meta": {
            "category": "Uncategorised",
            "permalink": "/about.html",
            "layout": "post",
            "language": "uk-UA",
            "title": "Про нас",
            "cat_slug": "uncategorised",
            "featured": 0,
            "date": "2010-10-25T19:00:00",
            "slug": "about"
          },
          "body": "string"
        }
      }
    }
  }
}